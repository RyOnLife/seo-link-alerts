!!! Strict

%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  
  %head
    %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
    %title Link Alert
    = stylesheet_link_tag 'scaffold'
  
  %body
    
    %h1 Link Alerts
    
    %p(style="color:green")= flash[:notice]
    
    %ul
      - if current_user
        - unless params[:controller] == 'feeds'
          %li= link_to "Feeds", :feeds
        - unless params[:controller] == 'alerts'  
          %li= link_to "Alerts", :alerts
        - unless params[:controller] == 'users' 
          %li= link_to "Edit Profile", edit_user_path(:current)
        %li= link_to "Logout", logout_path
      - else
        %li= link_to "Register", new_user_path
        %li= link_to "Login", login_path
    
    = yield